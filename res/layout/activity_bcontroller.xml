<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/xcoor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text=" " />

        <TextView
            android:id="@+id/ycoor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text=" " />

        <TextView
            android:id="@+id/zcoor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text=" " />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <SeekBar
        	android:id="@+id/SeekBar03"
        	android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="0.30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
        
        <edu.gatech.inatural.robotcontrol.VerticalSeekBar
			android:id="@+id/SeekBar01"
    		android:progressDrawable="@drawable/progress_vertical"
    		android:thumb="@drawable/seek_thumb"
    		android:layout_height="fill_parent" android:layout_width="26dip"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickMode"
                android:layout_weight="0.30"
                android:text="Control\nMode" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickLeft"
                android:layout_weight="0.7"
                android:text="  Left   " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickForward"
                android:layout_weight="0.50"
                android:text="Forward" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickStop"
                android:layout_weight="0.50"
                android:text="Stop/\nCalibrate" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickBackward"
                android:layout_weight="0.50"
                android:text="Backward" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:orientation="vertical" >
            
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickLock"
                android:layout_weight="0.3"
                android:text="Lock" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:onClick="onClickRight"
                android:text="   Right  " />
        </LinearLayout>
        
        <edu.gatech.inatural.robotcontrol.VerticalSeekBar
			android:id="@+id/SeekBar02"
    		android:progressDrawable="@drawable/progress_vertical"
    		android:thumb="@drawable/seek_thumb"
    		android:layout_height="fill_parent" android:layout_width="26dip"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <SeekBar
            android:id="@+id/SeekBar04"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.30" />

    </LinearLayout>

</LinearLayout>