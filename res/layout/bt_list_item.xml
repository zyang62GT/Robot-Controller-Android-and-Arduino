<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/bt_canceltext"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/LightGray"
        android:gravity="center"
        android:text="X"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/bt_listposition"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt_macdata"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/LightGray"
        android:gravity="center"
        android:text="#"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/bt_macdata"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/bt_canceltext"
        android:layout_toRightOf="@+id/bt_listposition"
        android:background="@color/LightGray"
        android:gravity="center"
        android:text="MAC ADDRESS"
        android:textSize="25dp" />
        
</RelativeLayout>